# resize window (you can also use the mouse for that)
mode "normal" {
  bindsym $left focus left
  bindsym $up focus up
  bindsym $down focus down
  bindsym $right focus right

  bindsym $mod+$left workspace prev_on_output
  bindsym $mod+$up focus output right
  bindsym $mod+$down focus output left
  bindsym $mod+$right workspace next_on_output

  bindsym $mod+$mod2+$left resize shrink left 10 px or 10 ppt
  bindsym $mod+$mod2+$up resize grow up 10 px or 10 ppt
  bindsym $mod+$mod2+$down resize shrink height 10 px or 10 ppt
  bindsym $mod+$mod2+$right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+bracketleft mode "default"
}

bindsym $mod+bracketleft mode "normal"

bindsym --release $mod+Escape exec --no-startup-id "sleep 1 && xset dpms force off"

mode "pass-through" {
    bindsym $mod+Escape mode "default"
}

