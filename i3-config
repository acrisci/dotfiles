for_window [class="Spotify"] border pixel
for_window [instance="Firebug"] border pixel
for_window [class="Firefox"] border none
for_window [title="^Steam - Update News"] kill

# Vim directions
set $up k
set $down j
set $left h
set $right l

# Modifier keys
set $mod Mod4
set $mod2 Mod1

